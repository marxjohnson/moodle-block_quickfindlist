{{!
    @template block_quickfindlist/searchform

    Context variables required for this template:
    * roleid - User role for these results
    * actionurl - The action URL for the search form
    * searchlabel - The label for the search input
    * progressurl - The URL of the progress icon
    * instanceid - The block instance ID

    Example context (json):
    {
        "roleid": "-1",
        "actionurl": "https://example.com/course/view.php?id=1#quickfindlist-1",
        "searchlabel": "Search All Users",
        "progressurl": "https://example.com/pix/loading.svg",
        "instanceid": "1"
    }
}}

<a id="quickfindanchor{{roleid}}"></a>
<form id="quickfindform{{roleid}}" action="{{actionurl}}" method="post" data-roleid="{{roleid}}">
    <label class="sr-only visually-hidden" for="quickfindlistsearch{{roleid}}">{{searchlabel}}</label>
    <input id="quickfindlistsearch{{roleid}}" name="quickfindlistsearch{{roleid}}" class="quickfindlistsearch" autocomplete="off" data-roleid="{{roleid}}">
    <img width="16" {{!
         }}height="16" {{!
         }}id="quickfindprogress{{roleid}}" {{!
         }}class="quickfindprogress" {{!
         }}src="{{progressurl}}" {{!
         }}alt="{{#str}} loading, block_quickfindlist {{/str}}">
    <input type="submit" class="submitbutton" name="quickfindsubmit{{roleid}}" value="{{#str}} search {{/str}}">
</form>

{{#js}}
    require(['block_quickfindlist/quickfindlist'], function(quickfindlist) {
        quickfindlist.init({{instanceid}});
    });
{{/js}}

